[user]
	name = Luan Nguyen Thanh
	email = tklarryonline@gmail.com
[color]
	ui = auto
[alias]
	del = !git ls-files --deleted -z | xargs -0 git rm
	last = log -1 HEAD
	ru = remote update
	stt = status
	upstt = "!git ru; git stt"
	ac = !git add . && git commit
	acm = !git ac -m
	co = checkout
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[core]
	excludesfile = ~/.gitignore
	editor = vim
